{
  "extends": [
    "eslint-config-airbnb"
  ],
  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "jquery": true,
    "mongo": true
  },
  "rules": {
    "comma-dangle": 0,
    "func-names": 0,
    "prefer-const": 0,
    "no-constant-condition": 1,
    "no-dupe-keys": 1,
    "no-empty": 1,
    "curly": 2,
    "no-var": 0,
    "no-console": 0,
    "prefer-arrow-callback": 0,
    "object-shorthand": 0,
    "object-curly-spacing": 0,
    "no-param-reassign": [2, {"props": false}]
  }
}